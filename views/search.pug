extends layouts/main
//- [ mixin 으로 search 기능 설정 ]
include mixins/videoBlock

block content
    .search__header
        h3 Searching for #{searchingBy}
    .search__videos
        //- video 검색 결과가 없을 경우 안내 문구
        if videos.length === 0
            h5 No Videos Found
        each potato in videos
            +videoBlock({
                title: potato.title,
                views: potato.views,
                videoFile: potato.videoFile,
                id: potato.id
            })